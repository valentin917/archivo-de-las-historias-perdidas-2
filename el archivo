        function toggleReadingMode() {
            document.body.classList.toggle('reading-mode');
        }

        function toggleSynopsis(btn) {
            const synopsis = btn.previousElementSibling;
            const isVisible = synopsis.style.display === "block";
            const lang = document.querySelector('.lang-switcher button.active').id.split('-')[1];
            
            synopsis.style.display = isVisible ? "none" : "block";
            btn.innerText = !isVisible ? (translations[lang]["btn-close"] || "Close") : translations[lang]["btn-text"];
        }

        function changeLang(lang) {
            document.querySelectorAll('[data-key]').forEach(el => { el.style.opacity = '0'; });
            setTimeout(() => {
                document.querySelectorAll('[data-key]').forEach(el => {
                    const key = el.getAttribute('data-key');
                    if (translations[lang] && translations[lang][key]) {
                        el.innerHTML = translations[lang][key];
                    }
                    el.style.opacity = '1';
                });
                document.querySelectorAll('.lang-switcher button').forEach(btn => btn.classList.remove('active'));
                document.getElementById(`btn-${lang}`).classList.add('active');
            }, 400);
        }

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.novel-container').forEach(section => {
            observer.observe(section);
        });
    </script>
